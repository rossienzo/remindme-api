{
  "name": "test",
  "version": "1.0.0",
  "description": "Aplicação backend para locação de ônibus",
  "author": "Enzo Rossi",
  "repository": "https://github.com/rossienzo/locacao-api",
  "main": "index.js",
  "scripts": {
    "start": "node ./dist/main/server.js",
    "dev": "nodemon -L",
    "build": "tsc -p tsconfig-build.json",
    "lint": "eslint ./src --ext .ts",
    "lint-and-fix": "npm run lint -- --fix",
    "test": "npm run lint && dotenv -e .env.test -- jest --verbose --coverage",
    "test:watch": "dotenv -e .env.test -- jest --verbose --watchAll",
    "migration:generate": "typeorm-ts-node-commonjs -d ./src/infra/data/data-source.ts migration:generate ./src/infra/data/migrations/default",
    "migration:run": "typeorm-ts-node-commonjs -d ./src/infra/data/data-source migration:run",
    "migration:revert": "typeorm-ts-node-commonjs -d ./src/infra/data/data-source migration:revert",
    "seed:run": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run -d ./src/infra/data/data-source"
  },
  "keywords": [
    "node",
    "express",
    "typescript",
    "jest",
    "docker",
    "postgres",
    "RestAPI"
  ],
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.0",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/validator": "^13.11.9",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
